@using Ecocys.Admin.Core.Master
@model IEnumerable<Category>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Category</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/Uploads/@item.ImageName" width="100" height="70" /></td>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#modal" onclick="AddUpdateCategory(@item.CategoryId)">Edit</a> |
                    <a href="javascript:void(0)" onclick="DeleteCategory(@item.CategoryId)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
