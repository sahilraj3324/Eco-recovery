@using Ecocys.Admin.Core.Master
@model IEnumerable<Store>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Store Name</th>
            <th>Store Type</th>
            <th>Owner Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="~/uploads/storeimages/@item.ImageName" width="100" height="70" /></td>
                <td>@Html.DisplayFor(modelItem => item.StoreName)</td>
                <td>@Html.DisplayFor(modelItem => item.StoreType)</td>
                <td>@Html.DisplayFor(modelItem => item.OwnerName)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    <a href="javascript:void(0)" onclick="AddUpdateStore(@item.StoreId)">Edit</a> |
                    <a href="javascript:void(0)" onclick="DeleteStore(@item.StoreId)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
